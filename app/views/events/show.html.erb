<h1 class="my-5">Évènement</h1>

  <div class="card my-3">
    <div class="card-body">
      <h4 class="card-title"><%= @event.title %></h4>
      <h6 class="card-subtitle mb-2 text-muted"><%= @event.location %></h6>
      <p class="card-text">Date : <%= @event.date %> - Heure : <%= @event.start_time %> à <%= @event.end_time %><br>
       Durée : <%= @event.duration_conversion %> h</p>
       <p><%= @event.description %></p>
       <p>Prix : <%= @event.price %> €</p>
       <p>Nombre d'inscrits : <%= @users.length %></p>
       <p>Créateur : <%= @event.admin_user.email %></p>
    </div>
  </div>
  <div class='d-flex justify-content-end'>
    <% if current_user == @event.admin_user%>
      <%= button_to 'Modifier', edit_event_path(@event.id) , class: "btn btn-success my-5"%>
    <% else %>
      <%= button_to "S'inscrire", checkout_create_path(event_id: @event.id), method: :post, data: {turbo: false}, class: "btn btn-success mx-2" %>
    <%end%>
  </div>

  
  <% if @users.length>0 && current_user == @event.admin_user %>
  <h2 class="mt-5">Liste des participants</h2>
  <ul class="list-group mt-5">
  <% @users.each do |id| %>
    <%user = User.find(id)%>
    <li class="list-group-item"><%= user.email %></li>
  <%end%>
  </ul>
  <% end %>

