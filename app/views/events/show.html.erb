<h1 class="my-5">Évènement</h1>
  <div class="card my-3">
    <div class="card-body">
      <h4 class="card-title"><%= @event.title %></h4>
      <h6 class="card-subtitle mb-2 text-muted"><%= @event.location %></h6>
      <p class="card-text">Date : <%= @event.date %> - Heure : <%= @event.start_time %> à <%= @event.end_time %><br>
       Durée : <%= @event.duration_conversion %> h</p>
       <p><%= @event.description %></p>
       <p>Prix : <%= @event.price %> €</p>
       <p>Nombre d'inscrits : <%= @users.length %></p>
       <p>Créateur : <%= @event.admin_user.email %></p>
    </div>
  </div>
  <div class='d-flex justify-content-end'>
    <% if user_signed_in? %>
      <% if @event.is_admin?(current_user)%>
        <%= button_to 'Modifier', edit_event_path(@event.id) , class: "btn btn-success mx-2"%>
        <%= button_to 'Supprimer', event_path(@event.id) , method: :delete, data: {turbo_method: :delete}, class: "btn btn-danger mx-2"%>
      <% elsif @event.is_already_registred?(current_user) %>
        <h5 class="text-info">Vous êtes inscrit à cet évènement<h5>
      <% else%>
        
        <% if @event.price.zero? %>
          <%= button_to "Payer pour s'inscrire", event_attendances_path(event_id: @event.id, user_id: current_user.id), method: :post, data: {turbo: false}, class: "btn btn-success mx-2" %>
        <% else %>
          <%= button_to "Payer pour s'inscrire", checkout_create_path(event_id: @event.id), method: :post, data: {turbo: false}, class: "btn btn-success mx-2" %>
        <% end %>
        
      <%end%>
    <% else %>
      <%= link_to "Se connecter", new_user_session_path, class: "btn btn-primary mx-2" %>
      <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-secondary mx-2" %>
    <% end %>
  </div>

  
  <% if @users.length>0 && current_user == @event.admin_user %>
  <h2 class="mt-5">Liste des participants</h2>
  <ul class="list-group mt-5">
  <% @users.each do |id| %>
    <%user = User.find(id)%>
    <li class="list-group-item"><%= user.email %></li>
  <%end%>
  </ul>
  <% end %>

